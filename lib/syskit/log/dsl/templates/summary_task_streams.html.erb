<%= task_streams.task_name %> (<%= task_streams.orogen_model_name %>)
<h3>Ports:</h3>
<table>
<thead>
<tr>
    <td>Name</td>
    <td>Type</td>
    <td>Size</td>
    <td>From</td>
    <td>To</td>
</tr>
</thead>

<% task_name = "#{task_streams.task_name}_task" %>

<% task_streams.each_port_stream do |port_name, port| %>
<tr>
    <td><%= "#{task_name}.#{port_name}_port" %></td>
    <td><%= port.type.name %></td>
    <td><%= port.size %></td>
    <td><%= port.interval_lg.first %></td>
    <td><%= port.interval_lg.last %></td>
</tr>
<% end %>
</table>

<h3>Properties:</h3>

<table>
<thead>
<tr>
    <td>Name</td>
    <td>Type</td>
    <td>Size</td>
    <td>From</td>
    <td>To</td>
</tr>
</thead>

<% task_streams.each_property_stream do |property_name, property| %>
<tr>
    <td><%= "#{task_name}.properties.#{property_name}" %></td>
    <td><%= property.type.name %></td>
    <td><%= property.size %></td>
    <td><%= property.interval_lg.first %></td>
    <td><%= property.interval_lg.last %></td>
</tr>
<% end %>
</table>